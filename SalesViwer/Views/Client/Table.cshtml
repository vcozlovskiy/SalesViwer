<div class="text-center">
    <div class='dcell'></div>
    @if (User.IsInRole("Admin"))
    {
        <div class="btn-group" style="display: block;
                margin: 0 auto;
                width: 1000px;">
            <button class="btn btn-info btn-sm" onclick="ShowClientsTable();">Client table</button>
            <button class="btn btn-info btn-sm" onclick="CreateNewUser();">Add client</button>
            <button class="btn btn-info btn-sm" onclick="ShowAllOrders()">Order table</button>
            <button class="btn btn-info btn-sm" onclick="ShowManagetTable()">Manager table</button>
        </div>
    }
    else
    {
        <div class="btn-group" style="display: block;
                margin: 0 auto;
                width: 1000px;">
            <button class="btn btn-info btn-sm" onclick="getInfoUser();">Client table</button>
            <button class="btn btn-info btn-sm" onclick="ShowAllOrders()">Order table</button>
            <button class="btn btn-info btn-sm" onclick="ShowManagetTable()">Manager table</button>

        </div>
    }
</div>
